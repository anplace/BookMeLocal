<div class="home-container">
    {{#if messages.error}}
    <div class="alert alert-danger">{{messages.error}}</div>
    {{/if}}
    {{#if messages.success}}
    <div class="alert alert-success">{{messages.success}}</div>
    {{/if}}
    {{#if messages.info}}
    <div class="alert alert-info">{{messages.info}}</div>
    {{/if}}

    <h1>Welcome to BookMeLocal</h1>
    <p>Your one-stop solution for booking local services.</p>

    {{!-- Links for user to log in or register --}}
    <a href="/auth/login" class="btn">Login</a>
    <a href="/auth/register" class="btn">Register</a>
</div>